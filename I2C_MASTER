#define F_CPU 8000000
#include <avr/io.h>


void I2C_INIT(){
	TWSR |= (1<<TWPS1)|(1<<TWPS0);
	TWBR = 0x20;
	TWCR |= (1<<TWEN);
	TWAR = 0xF0;
}

void I2C_START(){
	TWCR |= (1<<TWSTA)|(1<<TWINT)|(1<<TWEN);
	while(!(TWCR&(1<<TWINT)));
	TWDR = 0xA0;
	TWCR |= (1<<TWINT)|(1<<TWEN);
	while(!(TWCR&(1<<TWINT)));
}

void I2C_WRITE(char data){
	TWDR = data;
	TWCR |= (1<<TWINT)|(1<<TWEN);
	while(!(TWCR&(1<<TWINT)));
}

void I2C_STOP(){
	TWCR |= (1<<TWSTO)|(1<<TWINT)|(1<<TWEN);
}

int main(void){
	I2C_INIT();
	I2C_START();
	I2C_WRITE('A');
	I2C_STOP();
	
	return 0;
}
